<p id="notice"><%= notice %></p>

<p>
  <div class="col-md-6 col-xs-6">
  <%= image_tag(@product.image_url,  class: "img-responsive img-zoom", width: "350", data_zoom_image: @product.image_url) %>
</div>
</p>

<div class="col-md-6 col-xs-6">

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Average Rating:</strong>
     <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div>
  </p>

  <p>
    <strong>Price: $</strong>
    <%= @product.price %>
  </p>

  <%= form_with(url: '/payments') do |form| %>
  <%= hidden_field_tag(:product_id, @product.id) %>
  <%= render partial: "shared/stripe_checkout_button" %>
<% end %>

  <p>
    <%= render 'new_comment' %>
  </p>

</div>

<p>
  <div class="col-md-12 col-xs-12">
    <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
    <%= render 'comments' %>
    <%= will_paginate @comments %>
  </div>
</p>
